{
  "python.jediEnabled": false,
  "diagnostic.messageTarget": "float",
  "signature.target": "float",
  "languageserver": {
    "clangd": {
      "command": "clangd",
      "filetypes": [
        "h",
        "hpp",
        "c",
        "cpp"
      ]
    },
    "dart": {
      "command": "dart",
      "args": ["/opt/dart-sdk/bin/snapshots/analysis_server.dart.snapshot", "--lsp"],
      "filetypes": ["dart"],
      "requireRootPattern": true,
      "rootPatterns": ["pubspec.yaml"]
    }
  }
}
